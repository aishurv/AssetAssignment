@using AssetUI.Services
@inject GetImageService GetImageService
<div class="col">
    <div class="card rounded-3 employee-card">
        <div class="card-header py-3 text-center">
            <h4>@AssetName</h4>
        </div>
        <div class="card-header py-3 text-center">
            <h5>Latest Series : @AssetSeries</h5>
        </div>
        <div class="card-body text-center">
            <div class="mb-3">
                <img src=@(GetImageService.GetImage(AssetName,"Asset")) class="img-fluid" />
            </div>
            <a href="/MachineByAssets{@AssetName}" class="btn btn-outline-primary btn-sm mb-1">
                Details of Machine Use this Asset
            </a>

        </div>
    </div>
</div>