@rendermode InteractiveServer
@using AssetUI.Services
@page "/"

<PageTitle>Home</PageTitle>

<div class=" container machine-container">

    <div class="bg-primary  p-2 text-center">
        <div class="btn text-white">
            <h3> Machine Overview (view all)
                <a href="/MachineTable" class="btn-primary p-1">
                    <i class="bi bi-table"></i>
                </a>
                <a href="/Machine" class="btn-primary p-1">
                    <i class="bi bi-filter-square"></i>
                </a>
            </h3>
        </div>
        
    </div>
    <div class=" row m-3">
        @if (machines == null)
        {
            <p><em>Loading...</em></p>
            <div class="col col-2 align-content-center ">
                <a href="/machine" class="btn text-white btn-secondary"> View All Machine Data </a>>
            </div>
        }
        else
        {
            <div class="row ">
                @foreach (var machine in machines)
                {
                    <div class="col-12 col-sm-12 col-md-6 col-lg-4 col-xl-3">
                        <ErrorBoundary>
                            <ChildContent>
                                <MachineCard Machine="machine"></MachineCard>
                            </ChildContent>
                            <ErrorContent>
                                <p class="errorUI">Invalid Machine!</p>
                            </ErrorContent>
                        </ErrorBoundary>
                    </div>
                }

                <div class="col col-2 align-content-center ">
                    <a href="/machine" class="btn text-white btn-secondary"> View All Machine Data </a>
                </div>
            </div>
        }
    </div>
</div>
<br />
<div class=" container asset-container">
    <div class="bg-primary p-2 text-center">
        <div class="btn text-white">
            <h3> Latest Assets Overview (View all Assets Information )
                <a href="/AssetsTable" class="btn-primary p-1">
                    <i class="bi bi-table"></i>
                </a>
                <a href="/Assets" class="btn-primary p-1">
                    <i class="bi bi-filter-square"></i>
                </a>
            </h3>
        </div>
    </div>
    <div class=" row m-3">
        @if (assets == null)
        {
            <p><em>Loading...</em></p>
            <div class="col col-2 align-content-center ">
                <a href="/Assets" class="btn text-white btn-secondary"> View All Assets Data </a>
            </div>
        }
        else
        {
            <div class="row ">
                @foreach (var assetName in LatestAssets.Keys)
                {
                    <div class="col-12 col-sm-12 col-md-6 col-lg-4 col-xl-3">
                        <ErrorBoundary>
                            <ChildContent>
                                <AssetCard AssetName="@assetName" AssetSeries="@LatestAssets[assetName]"></AssetCard>
                            </ChildContent>
                            <ErrorContent>
                                <p class="errorUI">Invalid Machine!</p>
                            </ErrorContent>
                        </ErrorBoundary>
                    </div>
                }
                <div class="col col-2 align-content-center ">
                    <a href="/Assets" class="btn text-white btn-secondary"> View All Assets Data </a>
                </div>
            </div>
        }
    </div>

</div>